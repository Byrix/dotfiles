{
  "margin": 400,
  "close-on-lost-focus": true,
  "show-keybinds": false,
  "no-version-info": true,
  "column-spacing": 50,
  "buttons": [
    {
      "label": "shutdown",
      "action": "systemctl poweroff",
      "text": "Shutdown",
      "keybind": "s",
      "icon": ".config/wleave/icons/shutdown.svg"
    },
    {
      "label": "reboot",
      "action": "systemctl reboot",
      "text": "Reboot",
      "keybind": "r",
      "icon": ".config/wleave/icons/reboot.svg"
    },
    {
      "label": "lock",
      "action": "hyprlock",
      "text": "Lock",
      "keybind": "l",
      "icon": ".config/wleave/icons/lock.svg"
    }
  ]
}
