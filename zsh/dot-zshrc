# HIST_STAMPS="mm/dd/yyyy"

# Built-in plugins 
plugins=(sudo dirhistory conda conda-env command-not-found alias-finder man pip ssh-agent wd tmux git)
# Custom plugins 
plugins+=(psql-import)

source $ZSH/oh-my-zsh.sh

# User configuration
# You may need to manually set your language environment
export LANG=en_AU.UTF-8

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='nano'
else
  export EDITOR='nvim'
fi

# CUSTOM FROM HERE ON
export PATH="$PATH:/home/byrix/.local/bin"

# === plugin settings ===========================
# --- alias-finder ----------
zstyle ':omz:plugins:alias-finder' autoload yes
zstyle ':omz:plugins:alias-finder' cheaper yes

# === app inits =================================
# --- conda init -------------
# Manually copied from changes to .bashrc made by running conda init
# Not complete changes
conda_path="/opt/miniconda3"
__conda_setup="$("$conda_path/bin/conda" 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "$conda_path/etc/profile.d/conda.sh" ]; then
        . "$conda_path/etc/profile.d/conda.sh"
    else
        export PATH="$PATH:$conda_path/bin"
    fi
fi
unset __conda_setup
