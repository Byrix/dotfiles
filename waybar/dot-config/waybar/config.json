{
  "layer": "bottom",
  "position": "top",
  "modules-left": ["custom/power", "custom/sep", "hyprland/window", "custom/sep", "custom/music", "custom/sep", "tray"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": ["systemd-failed-units", "custom/pacman", "custom/sep", "cpu", "memory", "custom/gpu", "custom/brightness", "battery", "network", "custom/sep", "pulseaudio", "custom/dunst", "custom/cpick", "custom/sep", "clock"],

  "hyprland/workspaces": {
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "home": "",
      "media": "",
      "misc": "",
      "comms": "",
      "default": ""
    }
  },
  "hyprland/window": {
    "format": "{title}",
    "separate-outputs": true,
    "rewrite": {
      "nvim .*": "Neovim",
      ".* Mozilla Firefox": "Firefox"
    }
  },
  "custom/music": {
    "format": "  {}",
    "escape": false,
    "interval": 5,
    "tooltip": false,
    "exec": "playerctl metadata --format='{{ title }} — {{ artist }}'",
    "on-click": "playerctl play-pause",
    "on-scroll-up": "playerctl previous",
    "on-scroll-down": "playerctl next",
    "max-length": 50
  },
  "clock": {
    "timezone": "Australia/Melbourne",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "  {:%d/%m/%Y}",
    "format": "  {:%H:%M}"
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "",
    "format-icons": {
        "default": ["", "", " "]
    },
    "on-click": "pavucontrol"
  },
  "custom/sep": {
    "tooltip": false,
    "format": "|"
  },
  "network": {
    "format": "  {bandwidthDownBytes}",
    "format-disconnect": "󰖪  disconnected"
  },
  "cpu": {
    "format": " {usage}%"
  },
  "memory": {
    "format": " {}%"
  },
  "custom/power": {
    "tooltip": false,
    "format": "",
    "on-click": "wleave"
  },
  "custom/sep-group": {
    "tooltip": false,
    "format": "      "
  },
  "custom/pacman": {
    "format": "󰮯 {}",
    "interval": 300,
    "exec": "checkupdates | wc -l",
    "exec-if": "exit 0",
    "on-click": "alacritty -e 'sudo pacman -Syu'; pkill -SIGRTMIN+8 waybar",
    "signal": 8
  },
  "systemd-failed-units": {
    "format": " {nr_failed_system}/{nr_failed_user}",
    "format-ok": " 0/0",
    "hide_on_ok": false
  },
  "tray": {
    "icon-size": 16,
    "spacing": 10,
    "icons": {
      "discord": "discord"
    }
  },
  "battery": {
    "states": {
      "normal": 100,
      "warning": 40,
      "urgent": 20,
      "critical": 10
    },
    "format": "{icon} {capacity}%",
    "format-icons": ["󰁺","󰁻","󰁼","󰁽","󰁾","󰁿","󰂀","󰂁","󰂂"],
    "tooltip-format": "{timeTo}"
  },
  "custom/dunst": {
    "exec": "~/.config/waybar/scripts/dunst.sh",
    "on-click": "dunstctl set-paused toggle",
    "restart-interval": 1
  },
  "custom/gpu": {
    "exec": "nvidia-smi --query-gpu=utilization.gpu,temperature.gpu --format=csv,nounits,noheader | sed 's/\\([0-9]\\+\\), \\([0-9]\\+\\)/\\1%/g'",
    "format": "󰍹 {}",
    "interval": 60
  },
  "custom/cpick": {
    "format": "",
    "on-click": "hyprpicker -arqlf hex"
  },
  "custom/brightness": {
    "exec": "~/.config/waybar/scripts/brightness.sh",
    "interval": 60,
    "format": "󰃠 {}"
  }
}
